<head>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "profile_style.css" %>
</head>

<body>
    <div id=container>
        <div id="flash"><% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %></div>
        <div id=header>
            <%= @user.username %>'s Profile
        </div>
        <div id=table-header>
            Your Games
        </div>
        <table class=games>
            <tr>
             <th>Games</th>
             <th>Edit Game</th>
             <th>See Results</th>
            </tr>
        <% @games.each do |game| %>
             <tr>
                <td><%= game.title%></a></td>
                <td><a href=<%= edit_game_path(current_user.id, game.id)%>><button type="button" class="btn btn-default btn-circle"><i class="glyphicon glyphicon-pencil"></i></button></a></td>
                <td><a href=<%= results_path(:id => game.id)%>><button type="button" class="btn btn-default btn-circle"><i class="glyphicon glyphicon-signal"></i></button></a></td>
             </tr>
          <% end %>
        </table>
    </div>
</body>