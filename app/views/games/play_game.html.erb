<div class="container">
    <div class="row">
        <div class="page-header">
            <% if !@game.tutorial %>
                <div class="pull-right">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            Expiration Date: <%= @expiration_time %>
                        </div>
                    </div>
                </div>
            <% end %>
            <h1><small>Play the game:</small> <small class="game-name-header"><%=@game.title %></small></h1>
        </div>
    </div>
    <div class="row top-buffer" style="text-align: center;">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4><%= @game.description %></h4>
            </div>
        </div>
    </div>
    <div class="row top-buffer">
        <div class="col-lg-6" style="text-align: center">
            <div style="height: 250px; margin-top: 50px">
                <% if @charityA.image_link == nil || @charityA.image_link == ""  %>
                    <%= image_tag asset_path("default-image1.png"), :style => "width: 200px; max-height: 250px;", :class =>"default_image_A"%>
                <% else %>
                    <%= image_tag @charityA.image_link, :style => "width: 300px; max-height: 100%; margin-bottom: 50px;"%>
                <% end %>
                
            </div>
            <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
                 <div class="col-sm-8 col-sm-offset-2">
                     <span><%= link_to @charityA.name + ' Homepage', @charityA.homepage_link%></span>
                 </div>
            </div>
            <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
                 <div class="col-sm-8 col-sm-offset-2">
                     <span style="text-align: center; word-wrap: break-word;"><%= @charityA.description %></span>
                </div>
            </div>
            <%= button_to "Donate to #{@charityA.name}", check_played_path(:id =>@game.id, :charity => @charityA, :show_results => @game.show_results), :class => "btn btn-primary btn-lg" %>
        </div>
        <div class="col-lg-6" style="text-align: center; word-wrap: break-word">
            <div style="height: 250px; margin-top: 50px">
                <% if @charityB.image_link == nil || @charityB.image_link == ""   %>
                    <%= image_tag asset_path("default-image2.png"), :style => "width: 275px; height: 195px;", :class =>"default_image_B"%>
                <% else %>
                    <%= image_tag @charityB.image_link, :style => "width: 300px; max-height: 100%; max-height: 275px; margin-bottom: 50px;"%>
                <% end %>
            </div>
            <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
                 <div class="col-sm-8 col-sm-offset-2">
                     <span><%= link_to @charityB.name + ' Homepage', @charityB.homepage_link%></span>
                 </div>
            </div>
            <div class="row" style="margin-bottom: 30px; margin-top: 30px;">
                <div class="col-sm-8 col-sm-offset-2">
                     <span style="text-align: center; word-wrap: break-word"><%= @charityB.description %></span>
                </div>
            </div>
            <%= button_to "Donate to #{@charityB.name}", check_played_path(:id =>@game.id, :charity => @charityB, :show_results => @game.show_results), :class => "btn btn-primary btn-lg" %>
        </div>
    </div>
</div>
