<div class="container">
    <div class="row">
        <div class="page-header">
            <% if !@tutorial %>
                <div class="pull-right">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            Expiration Date: <%= @expiration_time %>
                        </div>
                    </div>
                </div>
            <% end %>
            <h1><small>Play the game:</small> <small class="game-name-header"><%=@title %></small></h1>
        </div>
    </div>
    <div class="row top-buffer" style="text-align: center">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4><%=raw @description %></h4>
            </div>
        </div>
    </div>
    <div class="row top-buffer">
        <div class="col-lg-6" style="text-align: center">
            <div style="height: 275px">
                <% if @game.charityA_image_identifier.nil? %>
                    <% default = asset_path("default-photo.jpg") %>
                    <%= image_tag default, :style => "width: 300px; margin-bottom: 50px;"%>
                <% else %>
                    <%= src_a="public/uploads/giving_game/charityA_image/#{@game.id.to_s}/#{@game.charityA_image}" %>
                    <%= image_tag src_a, :style => "width: 300px; margin-bottom: 50px;"%>
                <% end %>
            </div>
            <div class="row" style="margin-bottom: 30px">
                 <div class="col-sm-6 col-sm-offset-3">
                     <span style="text-align: center"><%= raw @descriptionA %></span>
                </div>
            </div>
            <%= button_to "Donate to #{@charityA}", check_played_path(:id =>@game.id, :charity => @charityA, :show_results => @showResults), :class => "btn btn-primary btn-lg" %>
        </div>
        <div class="col-lg-6" style="text-align: center">
            <div style="height: 275px">
                <% if @game.charityB_image_identifier.nil? %>
                    <% default = asset_path("default-photo.jpg") %>
                    <%= image_tag default, :style => "width: 300px; margin-bottom: 50px;"%>
                <% else %>
                    <%= src_b="public/uploads/giving_game/charityB_image/#{@game.id.to_s}/#{@game.charityB_image}" %>
                    <%= image_tag src_b, :style => "width: 300px; margin-bottom: 50px;"%>
                <% end %>
            </div>
            <div class="row" style="margin-bottom: 30px">
                <div class="col-sm-6 col-sm-offset-3">
                     <span style="text-align: center"><%= raw @descriptionB %></span>
                </div>
            </div>
            <%= button_to "Donate to #{@charityB}", check_played_path(:id =>@game.id, :charity => @charityB, :show_results => @showResults), :class => "btn btn-primary btn-lg" %>
        </div>
    </div>
</div>
