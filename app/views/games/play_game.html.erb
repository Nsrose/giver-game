<div class="container">
    <div class="row">
        <div class="page-header"><h1><small>Play the game:</small> <small class="game-name-header"><%=@title %></small></h1></div>
    </div>
    <div class="row top-buffer" style="text-align: center">
        <div class="panel panel-default">
            <div class="panel-body">
                <h4><%= @description %></h4>
            </div>
        </div>
    </div>
    <div class="row top-buffer">
        <div class="col-lg-6" style="text-align: center">
            <%= button_tag "Donate to #{@charityOne}", :type => "button", :remote => true, :onclick => "vote_success('#{@charityOne}', #{@showResults});", :class => "btn btn-primary btn-lg" %>
        </div>
        <div class="col-lg-6" style="text-align: center">
            <%= button_tag "Donate to #{@charityTwo}", :type => "button", :remote => true, :onclick => "vote_success('#{@charityTwo}', #{@showResults});",  :class => "btn btn-primary btn-lg"%>
        </div>
    </div>
</div>


<script>
    var vote_success = function(name, show_results) {
        sweetAlert({
            title: 'Donation Successful!',
            text: 'Your choice: ' + name,
            type: 'success',
        }, function() {
            if (show_results) {
                if (name == '<%= @charityOne %>') {
                    window.location = '<%= results_path(:id => @game.id, :charity => @charityOne) %>';
                } else {
                    window.location = '<%= results_path(:id => @game.id, :charity => @charityTwo) %>';
                }
            } else {
                window.location = '<%= play_index_path %>';
            }
        });
    };
</script>

