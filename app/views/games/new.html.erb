<head>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "new_style.css" %>
</head>

<body>
    <div id="container" class="container">
        <div id=header>Create a new Giving game</div>

        <div class='form'>
            <%= form_tag create_game_path, method: :post do %>
    
            <div class=form-header>Name of Game</div>
            <div class='field-form-group'><%= text_field :game, :title, id: 'Title' %></div>
    
            <div class=form-header>Description</div>
            <div class='field-form-group'><%= text_field :game, :description, id: 'Description' %></div>
    
            <div class=form-header>Goal Amount of Money to Reach</div>
            <div class='field-form-group'><%= text_field :game, :total_money, id: 'TotalMoney' %></div>
    
            <div class=form-header>Per Person Amount</div>
            <div class='field-form-group'><%= text_field :game, :per_transaction, id: 'AmountPerVote' %></div>

            <div class=form-header>Charity A</div>
            <div class='field-form-group'><%= text_field :game, :charityA_title, id: 'Charity A' %></div>
    
            <div class=form-header>Description A</div>
            <div class='field-form-group'><%= text_field :game, :descriptionA, id: 'Description A' %></div>
    
            <div class=form-header>Charity B</div>
            <div class='field-form-group'><%= text_field :game, :charityB_title, id: 'Charity B' %></div>
    
            <div class=form-header>Description B</div>
            <div class='field-form-group'><%= text_field :game, :descriptionB, id: 'Description B' %></div>
    
            <div class=form-header>Tutorial?</div>
            <div class='field-form-group'><%= check_box :game, :tutorial, {}, true, false %></div>

            <div class=form-header>Show Results?</div>
            <div class='field-form-group'><%= check_box :game, :show_results, {}, true, false %></div>

            <div class="actions-form-group">
                <%= submit_tag 'Submit New Game' %>
            </div>
            <% end %>
        </div>
    </div>
</body>